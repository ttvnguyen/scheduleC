<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>
<%- include('./partials/nav.ejs') %>
<body>
    <div class="container" >
        <button onclick="window.print()" title="PRINT"><i class="fa fa-print" aria-hidden="true"></i></button>
        <script src="table-sort.js"></script>
        <table class="table-sort">
            <tr>
                <th>Description</th>
                <th class="order-by-desc">Category</th>
                <th>Amount</th>
                <th></th>
                <th></th>
            </tr>
            <% for (let i=0; i<transactions.length;i++){%>
                <tr>
                    <td>
                        <a href="/transactions/<%= transactions[i]._id %>"><%= transactions[i].description%>&nbsp;</a></td>&nbsp;&nbsp;
                    <td><%= transactions[i].category%></td>&nbsp;&nbsp;
                    <td><%= transactions[i].amount%></td>&nbsp;&nbsp;
                    <td><form action="/transactions/<%= transactions[i]._id%>?_method=DELETE" method="POST">
                        <input type="submit" class="fa-solid fa-trash-can" value="&#xf014;" >
                    </form></td>
                    <td><a href="/transactions/<%= transactions[i]._id %>/edit" class="fa-solid fa-edit"></a></td>
                </tr>
            <%}%>
        </table>
    </div>
    <%- include ('./partials/footer.ejs') %>
</body>
</html>